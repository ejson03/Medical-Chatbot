<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/headnew.ejs') %>
</head>
<body class="">
  <div class="wrapper ">
    <%- include('../partials/sidebar.ejs') %>
    <div class="main-panel">
      <%- include('../partials/topbar.ejs') %>
      <div class="content">
         <div class="container-fluid">
           <div class="row">
             <div class="col-md-12">
                  <div class="col-md-12">
                     <div class="card">
                     <div class="card-header card-header-primary">
                        <h4 class="card-title">Files</h4>
                        <p class="card-category"> <i class="material-icons">access_time</i> updated  <script>
                           document.write(new Date())
                         </script> ago </p>
                     </div>
                     <div class="card-body table-responsive">
                        <table class="table table-hover">
                           <thead class="text-warning">
                           <th>Document No.</th>
                           <th>Name</th>
                           <th>View</th>
                           <th>History</th>
                           </thead>
                           <tbody>
                              <% for (var record=0; record<records.length; record++){ %>
                           <tr>
                              <td><%= record +1%></td>
                              <td><%= records[record].data.description %></td>
                              <td>
                                 <form method="post" action="/view">
                                    <input type="hidden" name="status" value="encrypted" />
                                    <button rel="tooltip" type="submit" value="<%= records[record].data.file %>" name="fileURL" title="View File" class="btn btn-danger btn-link btn-sm">
                                       <i class="material-icons">folder_open</i>
                                    </button>
                                 </form>
                              </td>
                              <td>
                                 <form method="post" action="/user/assethistory">
                                    <button rel="tooltip" type="submit" value="<%= records[record].id %>" name="history" title="History of File" class="btn btn-danger btn-link btn-sm">
                                       <i class="material-icons">receipt_long</i>
                                    </button>
                                 </form>
                              </td>
                           </tr>
                           <% } %>
                           </tbody>
                        </table>
                     </div>
                     </div>
                  </div>
               </div>
             </div>
            </div> 
         <%- include('../partials/footer.ejs') %>
      </div>
    </div>
      
    <%- include('../partials/footerfiles.ejs') %>
  </body>
  
  </html>
